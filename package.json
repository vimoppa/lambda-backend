{
  "name": "delvent-storage",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/delvent/storage.git"
  },
  "private": true,
  "version": "1.0.0",
  "main": "src/handler.js",
  "scripts": {
    "deploy:env": "NODE_OPTIONS=\"$NODE_OPTIONS --max-old-space-size=6096\" sls deploy --stage $NODE_ENV",
    "deploy:staging": "export NODE_ENV=staging && npm run deploy:env",
    "deploy:prod": "export NODE_ENV=prod && npm run deploy:env",
    "format": "prettier --write \"src/**/*.ts\"",
    "lint": "eslint src --ext ts --no-ignore --fix --cache && npm run format",
    "checklint": "eslint src --ext ts --no-ignore --cache && prettier --check \"src/**/*.ts\"",
    "serve": "sls offline --param='cronEnabled=false'",
    "serve:watch": "nodemon -e js,ts,jsx,tsx -x npm run serve -- -- --param=\"memorySize=128\"",
    "serve:watch:local": "nodemon -e js,ts,jsx,tsx -x npm run serve -- -- --param=\"local=true\" --param=\"memorySize=128\"",
    "test": "jest --maxWorkers=50% --passWithNoTests",
    "test:diff": "npm run test -- --onlyChanged",
    "test:watch": "npm run test -- --watch",
    "test:ci": "jest --maxWorkers=2 --ci --passWithNoTests",
    "build": "sls webpack",
    "prepare": "chmod +x ./node_modules/husky/lib/bin.js && husky install"
  },
  "engines": {
    "node": ">=14.15.0"
  },
  "devDependencies": {
    "@babel/core": "^7.8.0",
    "@babel/preset-env": "7.6.0",
    "@babel/preset-typescript": "^7.10.4",
    "@serverless/typescript": "^3.0.0",
    "@types/aws4": "^1.11.6",
    "@types/aws-lambda": "^8.10.101",
    "@types/aws-serverless-express": "^3.3.9",
    "@types/express": "^4.17.13",
    "@types/jest": "^24.0.18",
    "@types/lodash": "^4.14.201",
    "@types/node": "^18.6.4",
    "@types/node-fetch": "^2.6.9",
    "@types/uuid": "^9.0.8",
    "@typescript-eslint/eslint-plugin": "^6.13.1",
    "@typescript-eslint/parser": "^6.13.1",
    "aws-sdk": "^2.733.0",
    "babel-core": "^7.0.0-bridge.0",
    "babel-jest": "^29.0.0",
    "babel-loader": "^8.0.6",
    "compression-webpack-plugin": "^10.0.0",
    "eslint": "^8.54.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^6.3.0",
    "eslint-import-resolver-typescript": "^1.1.1",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "husky": "^8.0.3",
    "jest": "^29.0.0",
    "lint-staged": "^12.3.2",
    "nodemon": "^3.0.1",
    "prettier": "^2.0.5",
    "serverless": "^3.21.0",
    "serverless-domain-manager": "^7.2.0",
    "serverless-dotenv-plugin": "^6.0.0",
    "serverless-offline": "^13.3.0",
    "serverless-plugin-warmup": "^8.2.1",
    "serverless-prune-plugin": "^2.0.2",
    "ts-jest": "^29.1.1",
    "ts-loader": "^9.5.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.2",
    "webpack": "^5.38.1",
    "webpack-node-externals": "^3.0.0"
  },
  "dependencies": {
    "aws-lambda": "^1.0.7",
    "aws-serverless-express": "^3.4.0",
    "aws4": "^1.12.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.17.1",
    "joi": "^17.11.0",
    "lodash": "^4.17.21",
    "lodash-contrib": "^4.1200.1",
    "moment": "^2.29.4",
    "node-fetch": "^2.7.0",
    "uuid": "^9.0.1"
  },
  "sideEffects": false,
  "lint-staged": {
    "*src/**/*.ts": ["eslint --fix", "prettier --ignore-unknown --write"]
  }
}
